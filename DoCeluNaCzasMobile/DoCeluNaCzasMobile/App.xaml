<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoCeluNaCzasMobile.App">
	<Application.Resources>

        <ResourceDictionary>
            <!-- Set Icons -->
            <x:String x:Key="Sort">&#xE8CB;</x:String>

            <!--Set static colors-->
            <!--Turquoise-->
            <Color x:Key="Turquoise">#007b7d</Color>
            <!--Gray-->
            <Color x:Key="Gray">#ccc</Color>
            <!--Light Turquoise -->
            <Color x:Key="Light-Turquoise">#a5b7b7</Color>
            <!--White-->
            <Color x:Key="White">#FFF</Color>


            <!-- Change navigation bar color -->
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#007b7d"/>
                <Setter Property="BarTextColor" Value="Color.White"/>
            </Style>

        </ResourceDictionary>

    </Application.Resources>
</Application>