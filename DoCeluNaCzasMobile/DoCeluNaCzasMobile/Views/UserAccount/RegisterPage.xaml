<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoCeluNaCzasMobile.Views.UserAccount.RegisterPage"
             xmlns:viewModels="clr-namespace:DoCeluNaCzasMobile.ViewModels.Register">
    <ContentPage.BindingContext>
        <viewModels:RegisterViewModel/>
    </ContentPage.BindingContext>

    <StackLayout VerticalOptions="Center"
                 Margin="20">

        <Entry  x:Name="EmailEntry"
                Text="{Binding Email}"
                Placeholder="emailEntry"
                Keyboard="Email"/>
        
        <Entry  x:Name="PasswordEntry"
                Text="{Binding Password}"
                Placeholder="passwordEntry"
                IsPassword="True"/>
        
        <Entry  x:Name="ConfirmPasswordEntry"
                Text="{Binding ConfirmPassword}"
                Placeholder="confirmPasswordEntry"
                IsPassword="True"/>

        <Button x:Name="RegisterButton"
                Command="{Binding RegisterCommand}"
                Text="Register"/>
        
        <Button x:Name="NavigateButton"
                Text="Go to Login Page"
                Clicked="OpenLoginPage_Clicked"/>
    </StackLayout>
</ContentPage>