                    <Label x:Name="H20Label" Text="20" Grid.Column="0" Grid.Row="20"/>
                    <Label x:Name="H21Label" Text="21" Grid.Column="0" Grid.Row="21"/>
                    <Label x:Name="H22Label" Text="22" Grid.Column="0" Grid.Row="22"/>
                    <Label x:Name="H23Label" Text="23" Grid.Column="0" Grid.Row="23"/>

                    <Label x:Name="M00Label" Text="{Binding Path=[0], StringFormat='{0}'}" Grid.Column="1" Grid.Row="0"/>
                    <Label x:Name="M01Label" Text="{Binding Path=[1], StringFormat='{0}'}" Grid.Column="1" Grid.Row="1"/>
                    <Label x:Name="M02Label" Text="{Binding Path=[2], StringFormat='{0}'}" Grid.Column="1" Grid.Row="2"/>
