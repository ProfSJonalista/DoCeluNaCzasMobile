                    <Label x:Name="M19Label" Text="{Binding Path=[19], StringFormat='{0}'}" Grid.Column="1" Grid.Row="19"/>
                    <Label x:Name="M20Label" Text="{Binding Path=[20], StringFormat='{0}'}" Grid.Column="1" Grid.Row="20"/>
