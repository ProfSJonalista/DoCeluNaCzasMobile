             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DoCeluNaCzasMobile.Views.DetailPages.TimeTable.TimeTablePage.Days.HourAndMinuteGridView">
    <ContentView.Content>
        <ScrollView>
            <StackLayout Margin="20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" /> <!-- hours -->
                        <ColumnDefinition Width="*" /> <!-- minutes -->
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label x:Name="H00Label" Text="00" Grid.Column="0" Grid.Row="0"/>
                    <Label x:Name="H01Label" Text="01" Grid.Column="0" Grid.Row="1"/>
                    <Label x:Name="H02Label" Text="02" Grid.Column="0" Grid.Row="2"/>
                    <Label x:Name="H03Label" Text="03" Grid.Column="0" Grid.Row="3"/>
                    <Label x:Name="H04Label" Text="04" Grid.Column="0" Grid.Row="4"/>
                    <Label x:Name="H05Label" Text="05" Grid.Column="0" Grid.Row="5"/>
                    <Label x:Name="H06Label" Text="06" Grid.Column="0" Grid.Row="6"/>
                    <Label x:Name="H07Label" Text="07" Grid.Column="0" Grid.Row="7"/>
                    <Label x:Name="H08Label" Text="08" Grid.Column="0" Grid.Row="8"/>
                    <Label x:Name="H09Label" Text="09" Grid.Column="0" Grid.Row="9"/>
                    <Label x:Name="H10Label" Text="10" Grid.Column="0" Grid.Row="10"/>
                    <Label x:Name="H11Label" Text="11" Grid.Column="0" Grid.Row="11"/>
                    <Label x:Name="H12Label" Text="12" Grid.Column="0" Grid.Row="12"/>
                    <Label x:Name="H13Label" Text="13" Grid.Column="0" Grid.Row="13"/>
                    <Label x:Name="H14Label" Text="14" Grid.Column="0" Grid.Row="14"/>
                    <Label x:Name="H15Label" Text="15" Grid.Column="0" Grid.Row="15"/>
                    <Label x:Name="H16Label" Text="16" Grid.Column="0" Grid.Row="16"/>
