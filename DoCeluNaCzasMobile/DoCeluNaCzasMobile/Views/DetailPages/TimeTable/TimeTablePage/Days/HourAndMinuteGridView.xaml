                    <Label x:Name="M07Label" Text="{Binding Path=[7], StringFormat='{0}'}" Grid.Column="1" Grid.Row="7"/>
                    <Label x:Name="M08Label" Text="{Binding Path=[8], StringFormat='{0}'}" Grid.Column="1" Grid.Row="8"/>
                    <Label x:Name="M09Label" Text="{Binding Path=[9], StringFormat='{0}'}" Grid.Column="1" Grid.Row="9"/>
